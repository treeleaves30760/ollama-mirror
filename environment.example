# Ollama Mirror Server Environment Configuration
# Copy this file to .env and modify as needed

# Server Settings
OLLAMA_MIRROR_HOST=0.0.0.0
OLLAMA_MIRROR_PORT=11434
OLLAMA_MIRROR_WORKERS=1
OLLAMA_MIRROR_RELOAD=false

# Cache Settings
OLLAMA_MIRROR_CACHE_DIR=./cache
OLLAMA_MIRROR_CACHE_RETENTION_DAYS=30
OLLAMA_MIRROR_CACHE_CLEANUP_INTERVAL=3600
OLLAMA_MIRROR_CACHE_MAX_SIZE_GB=
OLLAMA_MIRROR_CACHE_COMPRESS_BLOBS=false

# Upstream Settings
OLLAMA_MIRROR_UPSTREAM_URL=https://registry.ollama.ai
OLLAMA_MIRROR_UPSTREAM_TIMEOUT=300
OLLAMA_MIRROR_MAX_CONCURRENT_DOWNLOADS=3
OLLAMA_MIRROR_RETRY_ATTEMPTS=3
OLLAMA_MIRROR_RETRY_DELAY=1.0

# Security Settings
OLLAMA_MIRROR_API_KEY=
OLLAMA_MIRROR_ALLOWED_MODELS=
OLLAMA_MIRROR_BLOCKED_MODELS=
OLLAMA_MIRROR_RATE_LIMIT_REQUESTS=100
OLLAMA_MIRROR_RATE_LIMIT_WINDOW=60

# Logging Settings
OLLAMA_MIRROR_LOG_LEVEL=INFO
OLLAMA_MIRROR_LOG_FILE=
OLLAMA_MIRROR_LOG_MAX_FILE_SIZE=10MB
OLLAMA_MIRROR_LOG_BACKUP_COUNT=5

# Feature Flags
OLLAMA_MIRROR_ENABLE_API_PROXY=true
OLLAMA_MIRROR_ENABLE_METRICS=true
OLLAMA_MIRROR_ENABLE_WEB_UI=false
